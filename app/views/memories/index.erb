<h2>~ <%= current_user.username.capitalize %>'s Memories ~</h2>

<% if !@memories.empty? %>
  <ul>
  <% @memories.each do |memory| %>
    <div>
      <li><h3>"<%= memory.title %>"</h3></li><br>
    </div>
  <% end %>
  </ul>
  
  <form method="GET" action="/memories/new">
  <input type="submit" value="Add a Memory" />
  </form> <br>
  
<% else %>
  
  <h2><%= current_user.username %>, you haven't made any Memories yet</h2>
  <form method="GET" action="/memories/new">
  <input type="submit" value="Add a Memory" />
  </form>
  
  <% end %>
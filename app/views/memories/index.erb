<h1>Welcome, <%= current_user.username %>!</h1>

<% if !@memories.empty? %>
  <h2>Your Memories:</h2>
  <ul>
  <% @memories.each do |memory| %>
      <li><h4>"<%= memory.title %>" <a href="/memories/<%= memory.slug %>">Memory info:</a></h4></li><br>
  <% end %>
  </ul>
  
  <form method="GET" action="/memories/new">
  <input type="submit" value="Create a New Memory" />
  </form> <br>
  
<% else %>
  
  <h2><%= current_user.username %>, you haven't made any Memories yet</h2>
  <form method="GET" action="/memories/new">
  <input type="submit" value="Create a New Memory" />
  </form>
  
  <% end %>
<h2>Edit Memory</h2>

<form method="post" action="/memories/<%= @memory.slug %>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <h3>Title of Memory: <input type="text" name="title" value="<%= @memory.title %>"></h3>
  <h3>Content: <input type="text" name="content" value="<%= @memory.content %>"></h3>
  
  <label><h3>Choose an Emotion(s):</h3></label>
  <% @emotions.each do |emotion| %>
    <input type="checkbox" name="memory[emotions_ids][]" id="<%= emotion.name %>" value="<%= emotion.id %>" <%='checked' if @memory.emotions.include?(emotion) %>><%= emotion.name %></input><br>
  <% end %><br>
  
  <input type="submit" value="submit">
</form>
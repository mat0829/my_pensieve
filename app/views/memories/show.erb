  <h2>Name of Memory: "<%= @memory.name %>"</h2>
  <h2>'<%= @memory.content %>'</h2>
  
  <ul>
    <%@memory.emotions.each do |emotion|%>
      <h3><%=emotion.name.capitalize%></h3>
    <%end%>
  </ul>


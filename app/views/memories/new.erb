<h1>Add a New Memory</h1>

<form action="/memories" method="POST">

  <h3>Title of Memory: <input type="text" name="title" style="text-transform:capitalize" 
  autocomplete="off" required="required"></h3><br>

  <h3><textarea name="content" cols="38" rows="10" placeholder="Enter Content here:" required="required"></textarea></h3><br>

  <% if !@emotions.empty? %>

    <label><h3>Choose an Emotion(s):</h3></label><br>
    
    <ul>
      <div class="form-3-col">
        <% @emotions.each do |emotion| %>
          <li><label><input type="checkbox" name="emotions[]" id="<%= emotion.name %>" value="<%= emotion.id %>"> 
          <%= emotion.name %></label></li>
        <% end %>
      </div>
    </ul><br>

    <h4>Create a New Emotion: <input type="text" id="new_emotion" name="emotion[name]" autocomplete="off" 
    style="text-transform:capitalize"></h4><br>
    
  <% else %>

    <h2><%= current_user.username.capitalize %>, add your first Emotion below:</h2>

    <h4>Create a New Emotion <input type="text" id="new_emotion" name="emotion[name]" autocomplete="off" 
    style="text-transform:capitalize"></h4><br>

  <% end %>
  
  <% if !@players.empty? %>

    <label><h3>Choose a Person/Pet(s):</h3></label><br>

    <ul>
      <div class="form-3-col">
        <% @players.each do |player| %>
          <li><label><input type="checkbox" name="players[]" id="<%= player.name %>" value="<%= player.id %>"> 
          <%= player.name %></label></li>
        <% end %>
      </div>
    </ul><br>

    <h4>Add a New Person/Pet <input type="text" id="new_player" name="player[name]" autocomplete="off" 
    style="text-transform:capitalize"></h4><br>
    
  <% else %>

    <h2><%= current_user.username.capitalize %>, add your first Person/Pet or your Name below:</h2>
    <h4>Add a New Person/Pet: <input type="text" id="new_player" name="player[name]" autocomplete="off" 
    style="text-transform:capitalize"></h4><br>
  <% end %>
    
  <input class="btn btn-primary" type="submit" value="Bottle Your Memory">
</form><br>

<form method="GET" action="/memories">
  <input type="submit" value="Memories Page">
</form><br>

<form method="GET" action="/">
  <input type="submit" value="Home Page">
</form>
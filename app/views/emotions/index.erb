<h3>Welcome, <%= current_user.username %>!</h3>

<% if !@emotions.empty? %>
  
  Your Emotions:
  <ul>
  <% @emotions.each do |emotion| %>
    <div>
      <li><h4><%= emotion.feeling %></h4></li>
    </div>
  <% end %>
  </ul>
  
  <form method="GET" action="/emotions/new">
  <input type="submit" value="Create a New Emotion" />
  </form> <br>
  
<% else %>
  
  <h2><%= current_user.username %>, you haven't made any Emotions yet</h2>
  <form method="GET" action="/emotions/new">
  <input type="submit" value="Create a New Emotion" />
  </form>
  
  <% end %>